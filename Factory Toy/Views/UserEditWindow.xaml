<Window x:Class="Factory_Toy.Views.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="400"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">

    <Border Background="{StaticResource CardColor}"
            CornerRadius="10"
            Padding="15"
            Margin="10"
            Effect="{StaticResource DropShadow}">

        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 0 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 1 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 2 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 3 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 4 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 5 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 6 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 7 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 8 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 9 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 10 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 11 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 12 -->
                </Grid.RowDefinitions>

                <!-- Логин -->
                <TextBlock Text="Логин:" Grid.Row="0"/>
                <TextBox x:Name="LoginBox" Grid.Row="1"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль:" Grid.Row="2"/>
                <TextBox x:Name="PasswordBox" Grid.Row="3"/>

                <!-- Имя -->
                <TextBlock Text="Имя:" Grid.Row="4"/>
                <TextBox x:Name="NameBox" Grid.Row="5"/>

                <!-- Роль -->
                <TextBlock Text="Роль:" Grid.Row="6"/>
                <ComboBox x:Name="RoleCombo"
                          Grid.Row="7"
                          Width="250"
                          DisplayMemberPath="RoleName"
                          SelectedValuePath="IdRole"/>

                <!-- Email -->
                <TextBlock Text="Email:" Grid.Row="8"/>
                <TextBox x:Name="EmailBox" Grid.Row="9"/>

                <!-- Телефон -->
                <TextBlock Text="Телефон:" Grid.Row="10"/>
                <TextBox x:Name="PhoneBox"
                             Grid.Row="11"
                             PreviewTextInput="PhoneBox_PreviewTextInput"
                             TextChanged="PhoneBox_TextChanged"/>


                <!-- Кнопка -->
                <Button Content="Сохранить"
                        Grid.Row="12"
                        Height="35"
                        Margin="0 15 0 0"
                        Click="Save_Click"/>
            </Grid>

        </ScrollViewer>
    </Border>
</Window>