<Window x:Class="Factory_Toy.Views.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказы" SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="400"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="{StaticResource CardColor}"
            CornerRadius="10"
            Padding="15"
            Margin="10"
            Effect="{StaticResource DropShadow}">


        <DockPanel Margin="10">

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 10">
            <Button Content="Добавить" Width="100" Margin="0 0 10 0" Click="Add_Click"/>
            <Button Content="Изменить" Width="100" Margin="0 0 10 0" Click="Edit_Click"/>
            <Button Content="Удалить" Width="100" Click="Delete_Click"/>
        </StackPanel>

            <DataGrid x:Name="OrdersGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          HeadersVisibility="Column"
          CanUserAddRows="False">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID" Binding="{Binding IdOrder}" Width="60"/>

                    <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate}" Width="150"/>

                    <DataGridTextColumn Header="ID клиента" Binding="{Binding IdUser}" Width="100"/>

                    <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount}" Width="120"/>

                    <DataGridTextColumn Header="Предоплата" Binding="{Binding Prepayment}" Width="120"/>

                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>

                    <DataGridTextColumn Header="Желаемая дата" Binding="{Binding DesiredDate}" Width="150"/>

                    <DataGridTextColumn Header="Фактическая дата" Binding="{Binding ActualDate}" Width="150"/>

                    <DataGridTextColumn Header="Адрес доставки" Binding="{Binding DeliveryAddress}" Width="250"/>

                </DataGrid.Columns>

            </DataGrid>
        </DockPanel>
        
    </Border>
</Window>