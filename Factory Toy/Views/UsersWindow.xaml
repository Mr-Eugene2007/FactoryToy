<Window x:Class="Factory_Toy.Views.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователи" Height="450" Width="800"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    <Border Background="{StaticResource CardColor}"
        CornerRadius="10"
        Padding="15"
        Margin="10"
        Effect="{StaticResource DropShadow}">


        <DockPanel Margin="10">

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 10">
                <Button Content="Добавить" Width="100" Margin="0 0 10 0" Click="Add_Click"/>
                <Button Content="Изменить" Width="100" Margin="0 0 10 0" Click="Edit_Click"/>
                <Button Content="Удалить" Width="100" Click="Delete_Click"/>
            </StackPanel>

            <DataGrid x:Name="UsersGrid"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  SelectionMode="Single"/>
        </DockPanel>
    </Border>
</Window>