<Window x:Class="Factory_Toy.Views.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер по клиентам"
        Height="300" Width="400"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">

    <Border Background="{StaticResource CardColor}"
            CornerRadius="10"
            Padding="20"
            Margin="10"
            Effect="{StaticResource DropShadow}">

        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Менеджер по клиентам"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <Button Content="Заказы" Height="40" Click="Orders_Click"/>
            <Button Content="Позиции заказа" Height="40" Margin="0 10 0 0" Click="OrderItems_Click"/>
            <Button Content="Товары" Height="40" Click="Products_Click"/>

        </StackPanel>

    </Border>
</Window>