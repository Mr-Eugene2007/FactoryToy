<Window x:Class="Factory_Toy.Views.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа" Height="600" Width="450"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Дата заказа:"/>
            <TextBox x:Name="OrderDateBox" Grid.Row="1"/>

            <TextBlock Text="ID пользователя:" Grid.Row="2"/>
            <TextBox x:Name="UserBox" Grid.Row="3"/>

            <TextBlock Text="Сумма заказа:" Grid.Row="4"/>
            <TextBox x:Name="TotalBox" Grid.Row="5"/>

            <TextBlock Text="Предоплата:" Grid.Row="6"/>
            <TextBox x:Name="PrepaymentBox" Grid.Row="7"/>

            <TextBlock Text="Статус:" Grid.Row="8"/>
            <TextBox x:Name="StatusBox" Grid.Row="9"/>

            <TextBlock Text="Желаемая дата:" Grid.Row="10"/>
            <TextBox x:Name="DesiredBox" Grid.Row="11"/>

            <TextBlock Text="Фактическая дата:" Grid.Row="12"/>
            <TextBox x:Name="ActualBox" Grid.Row="13"/>

            <TextBlock Text="Адрес доставки:" Grid.Row="14"/>
            <TextBox x:Name="AddressBox" Grid.Row="15"/>

            <Button Content="Сохранить" Grid.Row="16" Height="30" Margin="0 10 0 0"
                    Click="Save_Click"/>
        </Grid>
    </ScrollViewer>
</Window>