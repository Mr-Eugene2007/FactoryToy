<Window x:Class="Factory_Toy.Views.OrderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">

    <Border Background="{StaticResource CardColor}"
            CornerRadius="10"
            Padding="15"
            Margin="10"
            Effect="{StaticResource DropShadow}">

        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 0 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 1 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 2 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 3 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 4 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 5 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 6 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 7 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 8 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 9 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 10 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 11 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 12 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 13 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 14 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 15 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 16 -->
                </Grid.RowDefinitions>

                <!-- Дата заказа -->
                <TextBlock Text="Дата заказа:" Grid.Row="0"/>
                <TextBox x:Name="OrderDateBox" Grid.Row="1"/>

                <!-- ID пользователя -->
                <TextBlock Text="ID пользователя:" Grid.Row="2"/>
                <TextBox x:Name="UserIdBox" Grid.Row="3"/>

                <!-- Сумма заказа -->
                <TextBlock Text="Сумма заказа:" Grid.Row="4"/>
                <TextBox x:Name="TotalAmountBox" Grid.Row="5"/>

                <!-- Предоплата -->
                <TextBlock Text="Предоплата:" Grid.Row="6"/>
                <TextBox x:Name="PrepaymentBox" Grid.Row="7"/>

                <!-- Статус -->
                <TextBlock Text="Статус:" Grid.Row="8"/>
                <TextBox x:Name="StatusBox" Grid.Row="9"/>

                <!-- Желаемая дата -->
                <TextBlock Text="Желаемая дата:" Grid.Row="10"/>
                <TextBox x:Name="DesiredDateBox" Grid.Row="11"/>

                <!-- Фактическая дата -->
                <TextBlock Text="Фактическая дата:" Grid.Row="12"/>
                <TextBox x:Name="ActualDateBox" Grid.Row="13"/>

                <!-- Адрес доставки -->
                <TextBlock Text="Адрес доставки:" Grid.Row="14"/>
                <TextBox x:Name="DeliveryAddressBox"
                         Grid.Row="15"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <!-- Кнопка -->
                <Button Content="Сохранить"
                        Grid.Row="16"
                        Height="35"
                        Margin="0 15 0 0"
                        Click="Save_Click"/>
            </Grid>

        </ScrollViewer>
    </Border>
</Window>