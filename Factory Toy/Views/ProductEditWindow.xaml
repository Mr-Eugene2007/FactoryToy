<Window x:Class="Factory_Toy.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара"
        SizeToContent="WidthAndHeight"
        MinWidth="600"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">

    <Border Background="{StaticResource CardColor}"
            CornerRadius="10"
            Padding="15"
            Margin="10"
            Effect="{StaticResource DropShadow}">

        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Название:" Grid.Row="0"/>
                <TextBox x:Name="NameBox" Grid.Row="1"/>

                <TextBlock Text="Описание:" Grid.Row="2"/>
                <TextBox x:Name="DescriptionBox"
                         Grid.Row="3"
                         Height="70"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <!-- КАТЕГОРИЯ -->
                <TextBlock Text="Категория:" Grid.Row="4"/>
                <ComboBox x:Name="CategoryCombo"
                          Grid.Row="5"
                          Width="250"
                          DisplayMemberPath="CategoryName"
                          SelectedValuePath="IdCategory"/>

                <TextBlock Text="Розничная цена:" Grid.Row="6"/>
                <TextBox x:Name="RetailPriceBox" Grid.Row="7"/>

                <TextBlock Text="Себестоимость:" Grid.Row="8"/>
                <TextBox x:Name="CostPriceBox" Grid.Row="9"/>

                <TextBlock Text="Количество на складе:" Grid.Row="10"/>
                <TextBox x:Name="StockBox" Grid.Row="11"/>

                <!-- СТАТУС -->
                <TextBlock Text="Статус:" Grid.Row="12"/>
                <ComboBox x:Name="StatusCombo"
                          Grid.Row="13"
                          Width="250">
                    <ComboBoxItem Content="в продаже"/>
                    <ComboBoxItem Content="в производстве"/>
                    <ComboBoxItem Content="снят с производства"/>
                </ComboBox>

                <Button Content="Сохранить"
                        Grid.Row="14"
                        Height="35"
                        Margin="0 15 0 0"
                        Click="Save_Click"/>
            </Grid>

        </ScrollViewer>
    </Border>
</Window>