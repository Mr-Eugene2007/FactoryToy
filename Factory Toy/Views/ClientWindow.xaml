<Window x:Class="Factory_Toy.Views.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Клиент" Height="250" Width="350"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" VerticalAlignment="Center">

        <TextBlock Text="Личный кабинет клиента"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <Button Content="Просмотр товаров"
                Height="40"
                Margin="0 0 0 10"
                Click="Products_Click"/>

        <Button Content="Мои заказы"
                Height="40"
                Click="Orders_Click"/>

    </StackPanel>
</Window>
