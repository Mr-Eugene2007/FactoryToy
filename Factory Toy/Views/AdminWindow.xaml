<Window x:Class="Factory_Toy.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" Height="300" Width="400"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    <Border Background="{StaticResource CardColor}"
        CornerRadius="10"
        Padding="15"
        Margin="10"
        Effect="{StaticResource DropShadow}">

        <StackPanel Margin="20" VerticalAlignment="Center">

            <TextBlock Text="Панель администратора"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

            <Button Content="Товары"
                Height="40"
                Margin="0 0 0 10"
                Click="Products_Click"/>

            <Button Content="Пользователи"
                Height="40"
                Margin="0 0 0 10"
                Click="Users_Click"/>

            <Button Content="Позиции заказа"
                Height="40"
                Click="OrderItems_Click"/>

        </StackPanel>
    </Border>
</Window>