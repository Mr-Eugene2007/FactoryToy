<Window x:Class="Factory_Toy.Views.ClientOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мои заказы"
        Width="900"
        Height="600"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Мои заказы"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0 0 0 20"/>

            <ItemsControl x:Name="OrdersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <Border Background="{StaticResource CardColor}"
                                CornerRadius="12"
                                Padding="15"
                                Margin="0 0 0 15"
                                Effect="{StaticResource DropShadow}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Левая часть карточки -->
                                <StackPanel>
                                    <TextBlock Text="Заказ №{Binding IdOrder}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="#333"/>

                                    <TextBlock Text="{Binding OrderDate, StringFormat='Дата: {0:dd.MM.yyyy}'}"
                                               FontSize="14"
                                               Foreground="#666"
                                               Margin="0 5 0 0"/>

                                    <TextBlock Text="{Binding Status, StringFormat='Статус: {0}'}"
                                               FontSize="14"
                                               Foreground="#666"
                                               Margin="0 5 0 0"/>

                                    <TextBlock Text="{Binding TotalAmount, StringFormat='Сумма: {0} ₽'}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#444"
                                               Margin="0 10 0 0"/>
                                </StackPanel>

                                
                            </Grid>

                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</Window>