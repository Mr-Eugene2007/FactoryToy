<Window x:Class="Factory_Toy.Views.ClientOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мои заказы"
        Width="900"
        Height="600"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Мои заказы"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0 0 0 20"/>

            <ItemsControl x:Name="OrdersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <Border Background="{StaticResource CardColor}"
                                CornerRadius="12"
                                Padding="15"
                                Margin="0 0 0 15"
                                Effect="{StaticResource DropShadow}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Левая часть карточки -->
                                <StackPanel>

                                    <!-- Номер заказа -->
                                    <TextBlock FontSize="20"
               FontWeight="Bold"
               Foreground="#333">
        <Run Text="№"/>
        <Run Text="{Binding IdOrder}"/>
                                    </TextBlock>

                                                        <!-- Дата -->
                                                        <TextBlock Text="{Binding OrderDate, StringFormat='от {0:dd.MM.yyyy}'}"
                                   FontSize="14"
                                   Foreground="#666"
                                   Margin="0 5 0 0"/>

                                                        <!-- Статус -->
                                                        <Border Background="#E0E0E0"
                                CornerRadius="6"
                                Padding="4 2"
                                Margin="0 5 0 0"
                                HorizontalAlignment="Left">
                                                            <TextBlock Text="{Binding Status}"
                                       FontSize="13"
                                       Foreground="#444"/>
                                                        </Border>

                                                        <!-- Сумма -->
                                                        <TextBlock Text="{Binding TotalAmount, StringFormat='Сумма: {0} ₽'}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#444"
                                   Margin="0 10 0 0"/>

                                </StackPanel>


                            </Grid>

                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</Window>