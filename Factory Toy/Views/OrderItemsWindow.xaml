<Window x:Class="Factory_Toy.Views.OrderItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Позиции заказа" SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="400"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    <Border Background="{StaticResource CardColor}"
        CornerRadius="10"
        Padding="15"
        Margin="10"
        Effect="{StaticResource DropShadow}">


        <DockPanel Margin="10">

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 10">
                <Button Content="Добавить" Width="100" Margin="0 0 10 0" Click="Add_Click"/>
                <Button Content="Изменить" Width="100" Margin="0 0 10 0" Click="Edit_Click"/>
                <Button Content="Удалить" Width="100" Click="Delete_Click"/>
            </StackPanel>

            <DataGrid x:Name="ItemsGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          HeadersVisibility="Column"
          CanUserAddRows="False">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID" Binding="{Binding IdOrderItem}" Width="60"/>

                    <DataGridTextColumn Header="ID заказа" Binding="{Binding IdOrder}" Width="100"/>

                    <DataGridTextColumn Header="ID товара" Binding="{Binding IdProduct}" Width="100"/>

                    <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>

                    <DataGridTextColumn Header="Индивид." Binding="{Binding IsCustom}" Width="80"/>

                    <DataGridTextColumn Header="Описание" Binding="{Binding CustomDescription}" Width="Auto"/>

                </DataGrid.Columns>

            </DataGrid>
        </DockPanel>
    </Border>
</Window>
