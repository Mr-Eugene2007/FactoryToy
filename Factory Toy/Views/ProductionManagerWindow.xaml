<Window x:Class="Factory_Toy.Views.ProductionManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Производственный менеджер" SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="400"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">

    <Border Background="{StaticResource CardColor}"
            CornerRadius="10"
            Padding="15"
            Margin="10"
            Effect="{StaticResource DropShadow}">

        <StackPanel Margin="20" VerticalAlignment="Center">

            <TextBlock Text="Производственный менеджер"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <Button Content="Позиции заказа"
                    Height="40"
                    Margin="0 0 0 10"
                    Click="OrderItems_Click"/>

            <Button Content="Товары"
                    Height="40"
                    Margin="0 0 0 20"
                    Click="Products_Click"/>

            <!-- Кнопка выхода -->
            <Button Content="Выйти"
                    Height="40"
                    Background="#FF4444"
                    Foreground="White"
                    Click="Logout_Click"/>

        </StackPanel>
    </Border>
</Window>