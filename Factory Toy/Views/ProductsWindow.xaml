<Window x:Class="Factory_Toy.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товары" SizeToContent="WidthAndHeight"
        MinWidth="600"
        MinHeight="400"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="{StaticResource CardColor}"
        CornerRadius="10"
        Padding="15"
        Margin="10"
        Effect="{StaticResource DropShadow}">


        <DockPanel Margin="10">

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 0 10">
                <Button Content="Добавить" Width="100" Margin="0 0 10 0" Click="Add_Click"/>
                <Button Content="Изменить" Width="100" Margin="0 0 10 0" Click="Edit_Click"/>
                <Button Content="Удалить" Width="100" Click="Delete_Click"/>
            </StackPanel>

            <DataGrid x:Name="ProductsGrid"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              HeadersVisibility="Column"
              CanUserAddRows="False">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID" Binding="{Binding IdProduct}" Width="60"/>

                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>

                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="Auto"/>

                    <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}" Width="Auto"/>

                    <DataGridTextColumn Header="Цена (розн.)" Binding="{Binding RetailPrice}" Width="120"/>

                    <DataGridTextColumn Header="Цена (себ.)" Binding="{Binding CostPrice}" Width="120"/>

                    <DataGridTextColumn Header="На складе" Binding="{Binding StockQuantity}" Width="100"/>

                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>

                </DataGrid.Columns>

            </DataGrid>

        </DockPanel>
    </Border>
</Window>